<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:hwv="clr-namespace:HybridWebView;assembly=HybridWebView"
             x:Class="MauiReactJSHybridApp.MainPage">

    <Grid ColumnDefinitions="*" RowDefinitions="Auto,*">
        <Label
                Text="{Binding TodoAppTitle}"
                FontSize="32"
                HorizontalOptions="Center" />

        <hwv:HybridWebView Grid.Row="1" x:Name="myHybridWebView" HybridAssetRoot="ReactTodoApp" />
    </Grid>

</ContentPage>
